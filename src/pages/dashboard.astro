---
import Layout from '../layouts/main.astro';
import { MetricsDashboard } from '@/components/MetricsDashboard';
import { ChatInterface } from '@/components/ChatInterface';
---

<Layout title="Dashboard - GenAI">
	<section class="py-8 md:py-12">
		<div class="container mx-auto px-4">
			{/* Header */}
			<div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4 mb-8">
				<div>
					<h1 class="text-3xl md:text-4xl font-bold mb-2">Dashboard</h1>
					<p class="text-muted-foreground">
						Welcome back! Here's what's happening with your AI platform.
					</p>
				</div>
				<div class="flex gap-3">
					<button class="inline-flex items-center justify-center h-10 px-4 rounded-md border bg-background hover:bg-accent hover:text-accent-foreground transition-colors text-sm font-medium">
						Export Data
					</button>
					<button class="inline-flex items-center justify-center h-10 px-4 rounded-md bg-primary text-primary-foreground hover:bg-primary/90 transition-colors text-sm font-medium">
						New API Key
					</button>
				</div>
			</div>

			{/* Main Dashboard */}
			<div class="mb-8">
				<MetricsDashboard client:load />
			</div>

			{/* Secondary Content Grid */}
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
				{/* API Usage */}
				<div class="border rounded-lg p-6 bg-card">
					<h3 class="font-semibold mb-4">API Usage This Month</h3>
					<div class="space-y-4">
						<div>
							<div class="flex items-center justify-between text-sm mb-2">
								<span class="text-muted-foreground">Requests Used</span>
								<span class="font-semibold">487,234 / 1,000,000</span>
							</div>
							<div class="w-full bg-muted rounded-full h-2">
								<div class="bg-gradient-to-r from-purple-500 to-pink-500 h-2 rounded-full" style="width: 48.7%"></div>
							</div>
							<p class="text-xs text-muted-foreground mt-2">
								512,766 requests remaining
							</p>
						</div>

						<div class="grid grid-cols-2 gap-4 pt-4 border-t">
							<div>
								<p class="text-2xl font-bold">98.7%</p>
								<p class="text-sm text-muted-foreground">Success Rate</p>
							</div>
							<div>
								<p class="text-2xl font-bold">145ms</p>
								<p class="text-sm text-muted-foreground">Avg Response</p>
							</div>
						</div>
					</div>
				</div>

				{/* Quick Actions */}
				<div class="border rounded-lg p-6 bg-card">
					<h3 class="font-semibold mb-4">Quick Actions</h3>
					<div class="grid grid-cols-2 gap-3">
						<button class="flex flex-col items-center gap-2 p-4 rounded-lg border hover:bg-accent transition-colors">
							<div class="flex items-center justify-center w-10 h-10 rounded-full bg-primary/10">
								<svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
								</svg>
							</div>
							<span class="text-sm font-medium">New Project</span>
						</button>

						<button class="flex flex-col items-center gap-2 p-4 rounded-lg border hover:bg-accent transition-colors">
							<div class="flex items-center justify-center w-10 h-10 rounded-full bg-primary/10">
								<svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
								</svg>
							</div>
							<span class="text-sm font-medium">Generate Key</span>
						</button>

						<button class="flex flex-col items-center gap-2 p-4 rounded-lg border hover:bg-accent transition-colors">
							<div class="flex items-center justify-center w-10 h-10 rounded-full bg-primary/10">
								<svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
								</svg>
							</div>
							<span class="text-sm font-medium">View Docs</span>
						</button>

						<button class="flex flex-col items-center gap-2 p-4 rounded-lg border hover:bg-accent transition-colors">
							<div class="flex items-center justify-center w-10 h-10 rounded-full bg-primary/10">
								<svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
								</svg>
							</div>
							<span class="text-sm font-medium">Get Support</span>
						</button>
					</div>
				</div>
			</div>

			{/* AI Chat Assistant */}
			<div class="border rounded-lg p-6 bg-card mb-8">
				<div class="mb-6">
					<h3 class="font-semibold mb-2">AI Assistant</h3>
					<p class="text-sm text-muted-foreground">
						Ask questions about your API usage, documentation, or get help with integration.
					</p>
				</div>
				<ChatInterface client:load />
			</div>

			{/* Recent API Keys */}
			<div class="border rounded-lg overflow-hidden bg-card">
				<div class="p-6 border-b">
					<h3 class="font-semibold">API Keys</h3>
					<p class="text-sm text-muted-foreground">
						Manage your API keys and access tokens
					</p>
				</div>
				<div class="overflow-x-auto">
					<table class="w-full">
						<thead class="bg-muted/50">
							<tr>
								<th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">
									Name
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">
									Key
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">
									Created
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">
									Last Used
								</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">
									Actions
								</th>
							</tr>
						</thead>
						<tbody class="divide-y">
							<tr class="hover:bg-muted/30">
								<td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
									Production API
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-muted-foreground">
									sk-...4a8b
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
									Nov 15, 2025
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
									2 hours ago
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm">
									<button class="text-primary hover:underline mr-4">View</button>
									<button class="text-destructive hover:underline">Revoke</button>
								</td>
							</tr>
							<tr class="hover:bg-muted/30">
								<td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
									Development
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-muted-foreground">
									sk-...9c2d
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
									Nov 10, 2025
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
									1 day ago
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm">
									<button class="text-primary hover:underline mr-4">View</button>
									<button class="text-destructive hover:underline">Revoke</button>
								</td>
							</tr>
							<tr class="hover:bg-muted/30">
								<td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
									Testing
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-muted-foreground">
									sk-...1f7e
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
									Oct 28, 2025
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-muted-foreground">
									3 days ago
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm">
									<button class="text-primary hover:underline mr-4">View</button>
									<button class="text-destructive hover:underline">Revoke</button>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
</Layout>
