---
import Layout from '../layouts/main.astro';
import { ChatInterface } from '@/components/ChatInterface';
import { ToastDemo } from '@/components/ToastDemo';
import { PricingCalculator } from '@/components/PricingCalculator';
import { LiveUserCount, StatsTicker, TrustBadges } from '@/components/SocialProof';
import { FileUpload } from '@/components/FileUpload';
import { CodeBlock } from '@/components/CodeBlock';
---

<Layout title="Advanced Components - GenAI">
	<section class="py-20 md:py-32">
		<div class="container mx-auto px-4">
			<div class="max-w-7xl mx-auto">
				{/* Header */}
				<div class="text-center space-y-4 mb-16">
					<h1 class="text-4xl md:text-6xl font-bold">
						Advanced{" "}
						<span class="bg-gradient-to-r from-purple-600 to-pink-600 dark:from-purple-400 dark:to-pink-400 bg-clip-text text-transparent">
							Components
						</span>
					</h1>
					<p class="text-xl text-muted-foreground max-w-2xl mx-auto">
						Production-ready components for modern AI applications
					</p>
				</div>

				{/* Components Grid */}
				<div class="space-y-16">
					{/* Command Palette */}
					<div class="space-y-4">
						<div>
							<h2 class="text-2xl font-bold mb-2">Command Palette</h2>
							<p class="text-muted-foreground mb-4">
								Modern command menu with keyboard shortcuts (Press Cmd+K or Ctrl+K to try it!)
							</p>
						</div>
						<div class="border rounded-lg p-6 bg-card">
							<p class="text-sm text-muted-foreground mb-4">
								The command palette is always active. Try pressing <kbd class="inline-flex items-center justify-center h-6 px-2 rounded border bg-muted text-xs font-mono">Cmd</kbd> + <kbd class="inline-flex items-center justify-center h-6 px-2 rounded border bg-muted text-xs font-mono">K</kbd> to open it.
							</p>
							<CodeBlock
								code={`import { CommandPalette } from '@/components/CommandPalette';

export default function App() {
  return (
    <>
      <CommandPalette />
      {/* Your app content */}
    </>
  );
}`}
								language="tsx"
								client:load
							/>
						</div>
					</div>

					{/* Chat Interface */}
					<div class="space-y-4">
						<div>
							<h2 class="text-2xl font-bold mb-2">Chat Interface</h2>
							<p class="text-muted-foreground mb-4">
								AI-powered chat component with typing indicators and message history
							</p>
						</div>
						<div class="border rounded-lg p-6 bg-card">
							<ChatInterface client:load />
						</div>
						<CodeBlock
							code={`import { ChatInterface } from '@/components/ChatInterface';

export default function Support() {
  return <ChatInterface />;
}`}
							language="tsx"
							client:load
						/>
					</div>

					{/* Toast Notifications */}
					<div class="space-y-4">
						<div>
							<h2 class="text-2xl font-bold mb-2">Toast Notifications</h2>
							<p class="text-muted-foreground mb-4">
								Beautiful toast notifications with multiple variants
							</p>
						</div>
						<div class="border rounded-lg p-6 bg-card">
							<ToastDemo client:load />
						</div>
						<CodeBlock
							code={`import { ToastDemo } from '@/components/ToastDemo';

export default function App() {
  return <ToastDemo />;
}`}
							language="tsx"
							client:load
						/>
					</div>

					{/* Pricing Calculator */}
					<div class="space-y-4">
						<div>
							<h2 class="text-2xl font-bold mb-2">Pricing Calculator</h2>
							<p class="text-muted-foreground mb-4">
								Interactive pricing calculator with volume-based tiers
							</p>
						</div>
						<div class="border rounded-lg p-6 bg-card">
							<PricingCalculator client:load />
						</div>
						<CodeBlock
							code={`import { PricingCalculator } from '@/components/PricingCalculator';

export default function Pricing() {
  return <PricingCalculator />;
}`}
							language="tsx"
							client:load
						/>
					</div>

					{/* Social Proof Widgets */}
					<div class="space-y-4">
						<div>
							<h2 class="text-2xl font-bold mb-2">Social Proof Widgets</h2>
							<p class="text-muted-foreground mb-4">
								Build trust with live user counts, stats, and trust badges
							</p>
						</div>
						<div class="space-y-6">
							{/* Live User Count */}
							<div class="border rounded-lg p-6 bg-card">
								<h3 class="font-semibold mb-4">Live User Count</h3>
								<div class="flex items-center justify-center p-8">
									<LiveUserCount client:load />
								</div>
								<CodeBlock
									code={`import { LiveUserCount } from '@/components/SocialProof';

export default function Hero() {
  return <LiveUserCount />;
}`}
									language="tsx"
									client:load
								/>
							</div>

							{/* Stats Ticker */}
							<div class="border rounded-lg p-6 bg-card">
								<h3 class="font-semibold mb-4">Stats Ticker</h3>
								<StatsTicker client:load />
								<div class="mt-6">
									<CodeBlock
										code={`import { StatsTicker } from '@/components/SocialProof';

export default function Stats() {
  return <StatsTicker />;
}`}
										language="tsx"
										client:load
									/>
								</div>
							</div>

							{/* Trust Badges */}
							<div class="border rounded-lg p-6 bg-card">
								<h3 class="font-semibold mb-4">Trust Badges</h3>
								<TrustBadges />
								<div class="mt-6">
									<CodeBlock
										code={`import { TrustBadges } from '@/components/SocialProof';

export default function Footer() {
  return <TrustBadges />;
}`}
										language="tsx"
										client:load
									/>
								</div>
							</div>
						</div>
					</div>

					{/* File Upload */}
					<div class="space-y-4">
						<div>
							<h2 class="text-2xl font-bold mb-2">File Upload</h2>
							<p class="text-muted-foreground mb-4">
								Drag-and-drop file upload with progress tracking
							</p>
						</div>
						<div class="border rounded-lg p-6 bg-card">
							<FileUpload client:load />
						</div>
						<CodeBlock
							code={`import { FileUpload } from '@/components/FileUpload';

export default function Upload() {
  return <FileUpload />;
}`}
							language="tsx"
							client:load
						/>
					</div>

					{/* Cookie Consent */}
					<div class="space-y-4">
						<div>
							<h2 class="text-2xl font-bold mb-2">Cookie Consent Banner</h2>
							<p class="text-muted-foreground mb-4">
								GDPR-compliant cookie consent with granular preferences
							</p>
						</div>
						<div class="border rounded-lg p-6 bg-card">
							<p class="text-sm text-muted-foreground mb-4">
								The cookie consent banner automatically appears on first visit. Clear your localStorage to see it again.
							</p>
							<CodeBlock
								code={`import { CookieConsent } from '@/components/CookieConsent';

export default function App() {
  return (
    <>
      <CookieConsent />
      {/* Your app content */}
    </>
  );
}`}
								language="tsx"
								client:load
							/>
						</div>
					</div>
				</div>

				{/* CTA */}
				<div class="mt-16 border rounded-lg p-8 bg-gradient-to-br from-purple-500/5 to-pink-500/5 text-center">
					<h3 class="text-2xl font-bold mb-2">Ready to build?</h3>
					<p class="text-muted-foreground mb-6">
						All components are fully customizable and production-ready
					</p>
					<div class="flex gap-4 justify-center">
						<a href="/components" class="inline-flex items-center justify-center h-10 px-6 rounded-md border bg-background hover:bg-accent hover:text-accent-foreground transition-colors text-sm font-medium">
							View All Components
						</a>
						<a href="/dashboard" class="inline-flex items-center justify-center h-10 px-6 rounded-md bg-primary text-primary-foreground hover:bg-primary/90 transition-colors text-sm font-medium">
							See Dashboard Demo
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>
