---
import Layout from '../layouts/main.astro';
import { Button } from '@/components/ui/button';
import { Mail, MapPin, Phone, Send } from 'lucide-react';
---

<Layout title="Contact Us - GenAI">
	<section class="py-20 md:py-32">
		<div class="container mx-auto px-4">
			<div class="max-w-5xl mx-auto">
				<div class="text-center space-y-4 mb-16">
					<h1 class="text-4xl md:text-6xl font-bold">
						Get in{" "}
						<span class="bg-gradient-to-r from-purple-600 to-pink-600 dark:from-purple-400 dark:to-pink-400 bg-clip-text text-transparent">
							Touch
						</span>
					</h1>
					<p class="text-xl text-muted-foreground max-w-2xl mx-auto">
						Have a question or want to work together? We'd love to hear from you.
					</p>
				</div>

				<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
					<!-- Contact Form -->
					<div class="lg:col-span-2">
						<div class="p-8 rounded-2xl border bg-card">
							<h2 class="text-2xl font-bold mb-6">Send us a message</h2>
							<form class="space-y-6">
								<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
									<div>
										<label for="name" class="block text-sm font-medium mb-2">
											Name
										</label>
										<input
											type="text"
											id="name"
											name="name"
											class="flex h-10 w-full rounded-md border bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
											placeholder="John Doe"
											required
										/>
									</div>
									<div>
										<label for="email" class="block text-sm font-medium mb-2">
											Email
										</label>
										<input
											type="email"
											id="email"
											name="email"
											class="flex h-10 w-full rounded-md border bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
											placeholder="john@example.com"
											required
										/>
									</div>
								</div>

								<div>
									<label for="subject" class="block text-sm font-medium mb-2">
										Subject
									</label>
									<input
										type="text"
										id="subject"
										name="subject"
										class="flex h-10 w-full rounded-md border bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
										placeholder="How can we help?"
										required
									/>
								</div>

								<div>
									<label for="message" class="block text-sm font-medium mb-2">
										Message
									</label>
									<textarea
										id="message"
										name="message"
										rows="6"
										class="flex w-full rounded-md border bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring resize-none"
										placeholder="Tell us more about your project..."
										required
									></textarea>
								</div>

								<button
									type="submit"
									class="inline-flex items-center justify-center gap-2 h-10 px-6 rounded-md bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors w-full md:w-auto"
								>
									<Send class="h-4 w-4" />
									Send Message
								</button>
							</form>
						</div>
					</div>

					<!-- Contact Info -->
					<div class="space-y-6">
						<div class="p-6 rounded-2xl border bg-card">
							<div class="inline-flex p-3 rounded-xl bg-gradient-to-br from-purple-500 to-pink-500 mb-4">
								<Mail class="h-6 w-6 text-white" />
							</div>
							<h3 class="text-lg font-semibold mb-2">Email</h3>
							<p class="text-muted-foreground">hello@genai.com</p>
							<p class="text-muted-foreground">support@genai.com</p>
						</div>

						<div class="p-6 rounded-2xl border bg-card">
							<div class="inline-flex p-3 rounded-xl bg-gradient-to-br from-blue-500 to-cyan-500 mb-4">
								<Phone class="h-6 w-6 text-white" />
							</div>
							<h3 class="text-lg font-semibold mb-2">Phone</h3>
							<p class="text-muted-foreground">+1 (555) 123-4567</p>
							<p class="text-sm text-muted-foreground mt-1">Mon-Fri 9am-6pm EST</p>
						</div>

						<div class="p-6 rounded-2xl border bg-card">
							<div class="inline-flex p-3 rounded-xl bg-gradient-to-br from-green-500 to-emerald-500 mb-4">
								<MapPin class="h-6 w-6 text-white" />
							</div>
							<h3 class="text-lg font-semibold mb-2">Office</h3>
							<p class="text-muted-foreground">
								123 AI Street<br />
								San Francisco, CA 94102<br />
								United States
							</p>
						</div>

						<!-- Social Links -->
						<div class="p-6 rounded-2xl border bg-card">
							<h3 class="text-lg font-semibold mb-4">Follow Us</h3>
							<div class="flex gap-3">
								<a href="https://twitter.com" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center h-10 w-10 rounded-md border bg-background hover:bg-accent transition-colors">
									<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
										<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
									</svg>
								</a>
								<a href="https://github.com" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center h-10 w-10 rounded-md border bg-background hover:bg-accent transition-colors">
									<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
										<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
									</svg>
								</a>
								<a href="https://linkedin.com" target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center h-10 w-10 rounded-md border bg-background hover:bg-accent transition-colors">
									<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
										<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
									</svg>
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>
