---
import Layout from '../layouts/main.astro';
import { Home, Search, ArrowLeft } from 'lucide-react';

const base = import.meta.env.BASE_URL;
---

<Layout title="Page Not Found - GenAI">
	<section class="py-20 md:py-32 min-h-[60vh] flex items-center">
		<div class="container mx-auto px-4">
			<div class="max-w-2xl mx-auto text-center">
				{/* 404 Illustration */}
				<div class="mb-8">
					<div class="relative">
						<h1 class="text-9xl md:text-[200px] font-bold bg-gradient-to-r from-purple-600 to-pink-600 dark:from-purple-400 dark:to-pink-400 bg-clip-text text-transparent opacity-20">
							404
						</h1>
						<div class="absolute inset-0 flex items-center justify-center">
							<div class="relative">
								<div class="absolute inset-0 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full blur-2xl opacity-30 animate-pulse"></div>
								<Search class="h-24 w-24 md:h-32 md:w-32 text-purple-600 dark:text-purple-400 relative" />
							</div>
						</div>
					</div>
				</div>

				{/* Content */}
				<h2 class="text-3xl md:text-4xl font-bold mb-4">
					Page Not Found
				</h2>
				<p class="text-lg text-muted-foreground mb-8">
					Oops! The page you're looking for doesn't exist. It might have been moved or deleted.
				</p>

				{/* Actions */}
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href={base}
						class="inline-flex items-center justify-center gap-2 h-10 px-6 rounded-md bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors"
					>
						<Home class="h-4 w-4" />
						Back to Home
					</a>
					<button
						onclick="history.back()"
						class="inline-flex items-center justify-center gap-2 h-10 px-6 rounded-md border bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
					>
						<ArrowLeft class="h-4 w-4" />
						Go Back
					</button>
				</div>

				{/* Helpful Links */}
				<div class="mt-12 pt-8 border-t">
					<p class="text-sm text-muted-foreground mb-4">
						Here are some helpful links instead:
					</p>
					<div class="flex flex-wrap gap-4 justify-center">
						<a href={`${base}#features`} class="text-sm text-primary hover:underline">
							Features
						</a>
						<a href={`${base}#pricing`} class="text-sm text-primary hover:underline">
							Pricing
						</a>
						<a href={`${base}blog`} class="text-sm text-primary hover:underline">
							Blog
						</a>
						<a href={`${base}about`} class="text-sm text-primary hover:underline">
							About
						</a>
						<a href={`${base}contact`} class="text-sm text-primary hover:underline">
							Contact
						</a>
						<a href={`${base}#faq`} class="text-sm text-primary hover:underline">
							FAQ
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>
