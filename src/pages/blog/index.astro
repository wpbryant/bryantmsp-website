---
import Layout from '../../layouts/main.astro';
import { ArrowRight, Calendar, Clock } from 'lucide-react';

const blogPosts = [
	{
		title: "Getting Started with AI: A Beginner's Guide",
		excerpt: "Learn the fundamentals of artificial intelligence and how to start building AI-powered applications today.",
		date: "2025-01-15",
		readTime: "5 min read",
		category: "Tutorial",
		slug: "getting-started-with-ai",
		image: "https://images.unsplash.com/photo-1677442136019-21780ecad995?w=800&h=400&fit=crop"
	},
	{
		title: "10 AI Use Cases Transforming Industries",
		excerpt: "Discover how artificial intelligence is revolutionizing healthcare, finance, retail, and more.",
		date: "2025-01-10",
		readTime: "7 min read",
		category: "Industry",
		slug: "ai-use-cases-transforming-industries",
		image: "https://images.unsplash.com/photo-1485827404703-89b55fcc595e?w=800&h=400&fit=crop"
	},
	{
		title: "Building Scalable AI Applications",
		excerpt: "Best practices and architectural patterns for building production-ready AI systems at scale.",
		date: "2025-01-05",
		readTime: "8 min read",
		category: "Engineering",
		slug: "building-scalable-ai-applications",
		image: "https://images.unsplash.com/photo-1555066931-4365d14bab8c?w=800&h=400&fit=crop"
	},
	{
		title: "The Future of Large Language Models",
		excerpt: "Exploring the latest advances in LLMs and what they mean for the future of AI development.",
		date: "2024-12-28",
		readTime: "6 min read",
		category: "Research",
		slug: "future-of-large-language-models",
		image: "https://images.unsplash.com/photo-1676573409371-f77e2b8f3d6e?w=800&h=400&fit=crop"
	},
	{
		title: "AI Security Best Practices",
		excerpt: "Essential security considerations when building and deploying AI-powered applications.",
		date: "2024-12-20",
		readTime: "10 min read",
		category: "Security",
		slug: "ai-security-best-practices",
		image: "https://images.unsplash.com/photo-1563986768609-322da13575f3?w=800&h=400&fit=crop"
	},
	{
		title: "Prompt Engineering 101",
		excerpt: "Master the art of prompt engineering to get better results from AI language models.",
		date: "2024-12-15",
		readTime: "5 min read",
		category: "Tutorial",
		slug: "prompt-engineering-101",
		image: "https://images.unsplash.com/photo-1655635643532-fa9ba2648cbe?w=800&h=400&fit=crop"
	}
];

const categories = ["All", "Tutorial", "Industry", "Engineering", "Research", "Security"];
---

<Layout title="Blog - GenAI">
	<section class="py-20 md:py-32">
		<div class="container mx-auto px-4">
			<div class="text-center space-y-4 mb-16">
				<h1 class="text-4xl md:text-6xl font-bold">
					Our{" "}
					<span class="bg-gradient-to-r from-purple-600 to-pink-600 dark:from-purple-400 dark:to-pink-400 bg-clip-text text-transparent">
						Blog
					</span>
				</h1>
				<p class="text-xl text-muted-foreground max-w-2xl mx-auto">
					Insights, tutorials, and updates from the GenAI team
				</p>
			</div>

			<!-- Category Filter -->
			<div class="flex flex-wrap gap-2 justify-center mb-12">
				{categories.map((category) => (
					<button class="px-4 py-2 rounded-full text-sm font-medium transition-colors border hover:bg-accent">
						{category}
					</button>
				))}
			</div>

			<!-- Blog Grid -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
				{blogPosts.map((post) => (
					<article class="group rounded-2xl border bg-card overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
						<a href={`/blog/${post.slug}`}>
							<div class="aspect-video overflow-hidden">
								<img
									src={post.image}
									alt={post.title}
									class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
								/>
							</div>
							<div class="p-6">
								<div class="flex items-center gap-4 text-sm text-muted-foreground mb-3">
									<span class="inline-flex items-center gap-1">
										<Calendar class="h-4 w-4" />
										{new Date(post.date).toLocaleDateString('en-US', {
											month: 'short',
											day: 'numeric',
											year: 'numeric'
										})}
									</span>
									<span class="inline-flex items-center gap-1">
										<Clock class="h-4 w-4" />
										{post.readTime}
									</span>
								</div>
								<span class="inline-block px-3 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary mb-3">
									{post.category}
								</span>
								<h2 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
									{post.title}
								</h2>
								<p class="text-muted-foreground mb-4">
									{post.excerpt}
								</p>
								<span class="inline-flex items-center gap-2 text-sm font-medium text-primary group-hover:gap-3 transition-all">
									Read more
									<ArrowRight class="h-4 w-4" />
								</span>
							</div>
						</a>
					</article>
				))}
			</div>

			<!-- Newsletter CTA -->
			<div class="mt-20 p-8 md:p-12 rounded-2xl border bg-gradient-to-br from-purple-500/10 to-pink-500/10 text-center">
				<h2 class="text-2xl md:text-3xl font-bold mb-4">Never miss an update</h2>
				<p class="text-muted-foreground mb-6 max-w-xl mx-auto">
					Subscribe to our newsletter for the latest AI insights, tutorials, and product updates.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
					<input
						type="email"
						placeholder="Enter your email"
						class="flex h-10 w-full rounded-md border bg-background px-3 py-2 text-sm transition-colors placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
					/>
					<button class="inline-flex items-center justify-center h-10 px-6 rounded-md bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors whitespace-nowrap">
						Subscribe
					</button>
				</div>
			</div>
		</div>
	</section>
</Layout>
